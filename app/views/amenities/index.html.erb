<div class="container-fluid">
<div class="amenities-index">
<p id="notice"><%= notice %></p>

<h1>Listing Amenities</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @amenities.each do |amenity| %>
      <tr>
        <td><%= amenity.name %></td>
        <td><%= amenity.description %></td>
        <td><%= link_to 'Show', amenity, class: "btn btn-success" %></td>
        <% if can? :update, amenity %>
        <td><%= link_to 'Edit', edit_amenity_path(amenity), class: "btn btn-info" %></td>
        <% end %>
        <% if can? :destroy, amenity %>
        <td><%= link_to 'Destroy', amenity, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if can? :create, Amenity.new %>
<%= link_to 'New Amenity', new_amenity_path, class: "btn btn-primary" %>
<% end %>
</div>
</div>