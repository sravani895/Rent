<p id="notice"><%= notice %></p>
<h2><%= link_to 'unconfirmed rooms', bookings_unconfirmed_path %></h2>
<h1>Listing confirmed rooms</h1>

<table>
  <thead>
    <tr>
      <th>Start date</th>
      <th>End date</th>
      <th>User</th>
      <th>Room</th>
      <th>Amount</th>
      <th>Is confirmed</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bookings.each do |booking| %>
    <% if booking.is_confirmed == true %>
      <tr>
        <td><%= booking.start_date %></td>
        <td><%= booking.end_date %></td>
        <td><%= booking.user.user_name %></td>
        <td><%= booking.room.name %></td>
        <td><%= booking.amount %></td>
        <td><%= booking.is_confirmed %></td>
        <td><%= link_to 'Show', booking %></td>
        <td><%= link_to 'Edit', edit_booking_path(booking) %></td>
        <td><%= link_to 'Destroy', booking, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<br>

