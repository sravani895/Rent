<div class="container-fluid">
<div class="cities-index">
<p id="notice"><%= notice %></p>

<h1>Listing Cities</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cities.each do |city| %>
      <tr>
        <td><%=link_to city.name, city %></td>
        <!-- <td><%#= link_to 'Show', city, class: "btn btn-success" %></td> -->
        <% if can? :update, city %>
        <td><%= link_to 'Edit', edit_city_path(city), class: "btn btn-info" %></td>
        <% end %>
        <% if can? :destroy, city %>
        <td><%= link_to 'Destroy', city, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if can? :create, City.new %>
<%= link_to 'New City', new_city_path, class: "btn btn-primary" %>
<% end %>
</div>
</div>