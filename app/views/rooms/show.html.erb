<div class="container-fluid">
<div class="rooms-show">

<p id="notice"><%= notice %></p>
<div class="row">
<div class="col-md-6">
<table class="table table-bordered">
  <thead>
    <tr>
      <th>Name</th>
      <th><%= @room.name %></th>
    </tr>
      <tr>
      <th>Description</th>
      <th><%= @room.description %></th>
    </tr>
      <tr>
      <th>Price</th>
      <th><%= @room.price %></th>
    </tr>
      <tr>
      <th>Rules</th>
      <th><%= @room.rules %></th>
    </tr>
      <tr>
      <th>Minimum Days</th>
      <th><%= @room.minimum_days %></th>
    </tr>
      <tr>
      <th>Address</th>
      <th><%= @room.address %></th>
    </tr>
      <tr>
      <th>Lat</th>
      <th><%= @room.lat %></th>
    </tr>
      <tr>
      <th>Lng</th>
      <th><%= @room.lng %></th>
    </tr>
      <tr>
      <th>User</th>
