      }

      endDateHandle.onchange = function(){
        if(endDateHandle.value != ""){
          flag.enddate = true;
          showSubmitBtn(flag);
        }
      }

      function showSubmitBtn(flag){
        var innerFlag = 0;
        for(var key in flag){
          if(flag[key] == false){
            innerFlag = false;
          } else {
           innerFlag += 1;
          }
        }
        if(innerFlag === 2){
          submitHandle.disabled = false;
        }else {
          submitHandle.disabled = true;
        }
      }

  </script>

